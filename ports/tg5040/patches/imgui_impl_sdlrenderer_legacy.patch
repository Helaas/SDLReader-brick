+static void ImGui_ImplSDLRenderer_BlendPixel(ImGui_ImplSDLRenderer_Data* bd, int x, int y,
+                                             float src_r, float src_g, float src_b, float src_a)
+{
+    if (x < 0 || y < 0 || x >= bd->FrameWidth || y >= bd->FrameHeight)
+        return;
+
+    const size_t index = (size_t)y * (size_t)bd->FrameWidth + (size_t)x;
+
+    Uint8 dst_r = 0, dst_g = 0, dst_b = 0, dst_a = 0;
+    if (!bd->Framebuffer.empty() && bd->PixelFormat)
+    {
+        SDL_GetRGBA(bd->Framebuffer[index], bd->PixelFormat, &dst_r, &dst_g, &dst_b, &dst_a);
+    }
+
+    const float inv255 = 1.0f / 255.0f;
+    float dst_rf = dst_r * inv255;
+    float dst_gf = dst_g * inv255;
+    float dst_bf = dst_b * inv255;
+    float dst_af = dst_a * inv255;
+
+    float out_a = src_a + dst_af * (1.0f - src_a);
+    float out_r = src_r + dst_rf * (1.0f - src_a);
+    float out_g = src_g + dst_gf * (1.0f - src_a);
+    float out_b = src_b + dst_bf * (1.0f - src_a);
+
+    out_a = std::clamp(out_a, 0.0f, 1.0f);
+    out_r = std::clamp(out_r, 0.0f, 1.0f);
+    out_g = std::clamp(out_g, 0.0f, 1.0f);
+    out_b = std::clamp(out_b, 0.0f, 1.0f);
+
+    bd->Framebuffer[index] = SDL_MapRGBA(
+        bd->PixelFormat,
+        (Uint8)std::round(out_r * 255.0f),
+        (Uint8)std::round(out_g * 255.0f),
+        (Uint8)std::round(out_b * 255.0f),
+        (Uint8)std::round(out_a * 255.0f));
+}
