+        SDL_DestroyTexture(bd->FrameTexture);
+        bd->FrameTexture = nullptr;
+    }
+
+    bd->Framebuffer.clear();
+    bd->FrameWidth = 0;
+    bd->FrameHeight = 0;
+}
