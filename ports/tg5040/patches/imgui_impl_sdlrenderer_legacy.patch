+static inline void ImGui_ImplSDLRenderer_UpdateDirtyRegion(ImGui_ImplSDLRenderer_Data* bd, int x, int y)
+{
+    if (!bd->HasDirtyRegion)
+    {
+        bd->MinDirtyX = bd->MaxDirtyX = x;
+        bd->MinDirtyY = bd->MaxDirtyY = y;
+        bd->HasDirtyRegion = true;
+    }
+    else
+    {
+        if (x < bd->MinDirtyX) bd->MinDirtyX = x;
+        if (x > bd->MaxDirtyX) bd->MaxDirtyX = x;
+        if (y < bd->MinDirtyY) bd->MinDirtyY = y;
+        if (y > bd->MaxDirtyY) bd->MaxDirtyY = y;
+    }
+}
